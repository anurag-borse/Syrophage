@model QuotationFormData


@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quotation PDF</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .page-container {
            max-width: 800px;
            margin: auto;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            background-color: #f9f9f9;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

        .quotation-section {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            width: 100%;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #9DE418;
            color: #fff;
            font-size: 18px;
            padding: 15px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 20px;
        }

        .quotation-info {
            margin-top: 10px;
        }

        .info-item {
            margin-bottom: 15px;
        }

        .label {
            font-weight: bold;
            color: #333;
        }

        .value {
            color: #555;
        }

        .table-container {
            overflow-x: auto;
        }

        .services-table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ddd;
            margin-top: 10px;
        }

            .services-table th,
            .services-table td {
                padding: 8px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .services-table th {
                background-color: #f2f2f2;
                font-weight: bold;
            }

            .services-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .services-table tbody tr:hover {
                background-color: #f2f2f2;
            }

        #Quotation_Form {
            margin-top: 200px;
        }

        #Quotation_To {
            margin-bottom: 700px;
        }

        #Cards {
            margin-top: 30px;
        }

        #Services h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 10px;
        }

        #Services {
            margin-top: 800px;
        }

        #img {
            height: 100px;
        }
    </style>
</head>

<body>

    <img src="./Screenshot 2024-04-25 174323.png" id="img" />
    <h1>Quotation Details</h1>

    <div class="card" id="Quotation_Form">
        <div class="card-header">
            Quotation Form
        </div>
        <div class="card-body">
            <div class="quotation-info">
                <div class="quotation-info">
                    <div class="info-item">
                        <div class="label">Quotation By:</div>
                        <div class="value">@Model.QuotationBy</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Prepared By:</div>
                        <div class="value">@Model.PreparedBy</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Role:</div>
                        <div class="value">@Model.Role</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Contact:</div>
                        <div class="value">@Model.Contact</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Email:</div>
                        <div class="value">@Model.Email</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card" id="Quotation_To">
        <div class="card-header">
            Quotation To
        </div>
        <div class="card-body">
            <div class="quotation-info">
                <div class="quotation-info">
                    <div class="info-item">
                        <div class="label">Company Name:</div>
                        <div class="value">@Model.CompanyName</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Prepared For:</div>
                        <div class="value">@Model.PreparedFor</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Contact To:</div>
                        <div class="value">@Model.ContactTo</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Email To:</div>
                        <div class="value">@Model.EmailTo</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Us Card -->
    <div class="card">
        <div class="card-header">
            About Us
        </div>
        <div class="card-body">
            <div class="info-item">
                <div class="label">About Us:</div>
                <div class="value">
                    @Model.AboutUs
                </div>
            </div>
        </div>
    </div>

    <!-- Methodology Card -->
    <div class="card">
        <div class="card-header">
            Methodology
        </div>
        <div class="card-body">
            <div class="info-item">
                <div class="label">Methodology:</div>
                <div class="value">
                    @Model.Methodology
                </div>
            </div>
        </div>
    </div>
    <!-- Expectation Card -->
    <div class="card">
        <div class="card-header">
            Expectation
        </div>
        <div class="card-body">
            <div class="info-item">
                <div class="label">Expectation:</div>
                <div class="value">
                    @Model.Expectation
                </div>
            </div>
        </div>
    </div>

    <!-- Services Table -->
    <div id="Services">
        <h2>Services</h2>
        <div class="table-container">
            <table class="services-table">
                <thead>
                    <tr>
                        <th>Service</th>
                        <th>Description</th>
                        <th>One-Time Charges</th>
                        <th>Half-Yearly Charges</th>
                        <th>Annual Charges</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model.Services)
                    {
                        <tr>
                            <td>@service.Service</td>
                            <td>@service.Description</td>
                            <td>@service.OneTimeCharges</td>
                            <td>@service.HalfYearlyCharges</td>
                            <td>@service.AnnualCharges</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <!-- Terms Cards -->
    <!-- Terms Cards -->
    <div class="card" id="Cards">
        <div class="card-header">
            Terms and Conditions
        </div>
        <div class="card-body">
            <div class="info-item">
                <ul>
                    <li>@Model.Term1</li>
                </ul>
            </div>
            <div class="info-item">
                <ul>
                    <li>@Model.Term2</li>
                </ul>
            </div>
            <div class="info-item">
                <ul>
                    <li>@Model.Term3</li>
                </ul>
            </div>
        </div>
    </div>



</body>

</html>













