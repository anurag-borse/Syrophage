@model List<Syrophage.Models.Order>


<style>

    #Order {
        background-image: url('../assets/images/home/bg-work.jpg');
    }

</style>

<!-- Loader -->
<div id="preloader">
    <div id="status">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>
</div>


<section class="bg-half" id="Order">
    <div class="bg-overlay"></div>
    <div class="home-center">
        <div class="home-desc-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <div class="page-next-level text-white">
                            <h1 class="text-uppercase">Orders</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="mt-0 pt-4">
                    <div class="table-responsive mt-3">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Product Image</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.ProductImageurl" class="img-fluid" alt="Product Image" height="70px" width="70px" />
                                        </td>
                                        <td>@item.ProductName</td>
                                        <td>@item.quantity</td>
                                        <td>@item.date.ToString("dd-MM-yyyy")</td>
                                        <td>
                                            <a class="btn btn-buttons btn-round mr-3" asp-action="Trackorder" asp-controller="User" asp-route-id="@item.id">Track Order</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
